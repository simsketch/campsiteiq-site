---import ParticleButton from "./ui/ParticleButton.astro";
const { formId = "contact", subject = "Contact Form Submission" } = Astro.props;

---

<form
  action="https://api.web3forms.com/submit"
  method="POST"
  id={formId}
  >
  <input type="hidden" name="access_key" value="20109da6-d15c-4108-8462-c51d68b8ef2b" />
  <input type="hidden" name="subject" value={subject} />
  <input type="hidden" name="redirect" value="https://web3forms.com/success" />

  <div class="mb-5">
    <input
      type="text"
      placeholder="Full Name"
      required
      class="w-full px-4 py-3 border border-slate-300 rounded-lg"
      name="name"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your name.
    </div>
  </div>
  <div class="mb-5">
    <label for="email_address" class="sr-only">Email Address</label>
    <input
      id="email_address"
      type="email"
      placeholder="Email Address"
      name="email"
      required
      class="w-full px-4 py-3 border border-slate-300 rounded-lg"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your email address.
    </div>
    <div class="invalid-feedback text-red-400 text-sm mt-1">
      Please provide a valid email address.
    </div>
  </div>

  {formId === "job-application" && (
    <>
      <div class="mb-5">
        <input
          type="url"
          placeholder="LinkedIn Profile URL"
          name="linkedin"
          class="w-full px-4 py-3 border border-slate-300 rounded-lg"
        />
      </div>
      <div class="mb-5">
        <input
          type="url"
          placeholder="Portfolio URL (optional)"
          name="portfolio"
          class="w-full px-4 py-3 border border-slate-300 rounded-lg"
        />
      </div>
      <div class="mb-5">
        <label class="block text-sm text-slate-500 mb-2">Resume/CV URL</label>
        <input
          type="url"
          name="resume"
          placeholder="Link to your resume (Google Drive, Dropbox, etc.)"
          class="w-full px-4 py-3 border border-slate-300 rounded-lg"
          required
        />
        <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
          Please provide a link to your resume.
        </div>
      </div>
    </>
  )}

  <div class="mb-5">
    <textarea
      name="message"
      required
      placeholder={formId === "job-application" ? "Cover Letter" : "Message"}
      class="w-full px-4 py-3 border border-slate-300 rounded-lg"
      rows="5"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please enter your message.
    </div>
  </div>

  <ParticleButton type="submit" width="100%" height="65px">
      {formId === "job-application" ? "Submit Application" : "Send Message"}
  </ParticleButton>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>

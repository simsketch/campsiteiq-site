---
import { Picture } from "astro:assets";
import iphone from "assets/hero-image.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="relative grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <!-- <div class="gradient-mesh"></div> -->
  <div class="py-6 md:order-1 hidden md:block">
    <div class="relative group">
      <!-- <div class="gradient-hover"></div> -->
      <div>
        <Picture 
          src={iphone} 
          alt="Astronaut in the air" 
          width={400} 
          height={400} 
          class="hover-scale"
        />
      </div>
      <!-- <div class="gradient-glow"></div> -->
    </div>
  </div>
  <div>
    <h1
      class="text-gradient-animation text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Guide Your Guests to the Extraordinary.
    </h1>
    <p class="text-2xl mt-4 text-slate-600 max-w-xl shimmer">
      Tailor the Experience, Elevate the Stay.
    </p>
    <p class="text-md mt-4 text-slate-600 max-w-xl">
      Transform stays into stories worth sharing with a digital guidebook. Spend less time answering guests!
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://portal.touchguides.com"
        target="_blank"
        class="button-gradient flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud" />
        Get Started
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/features"
        class="gradient-border flex gap-1 items-center justify-center"
        target="_blank">
        Learn More
      </Link>
    </div>
  </div>
</main>

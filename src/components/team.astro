---
import { Image } from "astro:assets";
---

<div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
  {
    teamMembers.map((member) => (
      <div class="relative group">
        <div class="gradient-hover"></div>
        <div class="glass-card p-5">
          <div class="relative mb-4 overflow-hidden rounded-xl">
            <Image
              src={member.data.avatar}
              alt={member.data.name}
              width={400}
              height={400}
              class="hover-scale w-full aspect-square object-cover"
            />
          </div>
          <h3 class="text-2xl font-bold gradient-text">{member.data.name}</h3>
          <p class="text-slate-600">{member.data.title}</p>
          <div class="mt-4 flex gap-4">
            {member.data.social.map((social) => (
              <a
                href={social.url}
                class="text-slate-500 hover:text-slate-800 transition-colors"
                target="_blank"
                rel="noopener">
                <span class="sr-only">{social.platform}</span>
                <Icon class="w-6 h-6" name={social.icon} />
              </a>
            ))}
          </div>
        </div>
        <div class="gradient-glow"></div>
      </div>
    ))
  }
</div> 
---
import Link from "./ui/link.astro";
import ParticleButton from "./ui/ParticleButton.astro";

const PORTAL_URL = import.meta.env.PUBLIC_PORTAL_URL;
---

<div class="relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="relative py-16">
      <!-- <div class="glass-card p-8 md:p-12"> -->
        <h2 class="text-4xl md:text-5xl font-bold text-center text-gradient-animation mb-8 xl:leading-snug">
          Ready to Transform Your Guest Experience?
        </h2>
        <p class="text-center text-slate-600 dark:text-slate-400 mb-8 max-w-3xl mx-auto">
          Join hundreds of property owners who are delighting their guests with TouchGuides.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <ParticleButton href={`${PORTAL_URL}/sign-up`}>
            Get Started
          </ParticleButton>
          <ParticleButton href="/features" inverted>
            Learn More
          </ParticleButton>
        </div>
      </div>
    </div>
  </div>
</div>

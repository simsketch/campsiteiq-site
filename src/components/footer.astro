---
import Container from "@components/container.astro";
import { Image } from "astro:assets";
import logoImage from "assets/logo.png";

const footerLinks = [
  {
    title: "Product",
    items: [
      { title: "Features", path: "/features" },
      { title: "Pricing", path: "/pricing" },
      { title: "About", path: "/about" },
    ],
  },
  {
    title: "Resources",
    items: [
      { title: "Blog", path: "/blog" },
      { title: "Contact", path: "/contact" },
      { title: "Careers", path: "/careers" },
    ],
  },
  {
    title: "Company",
    items: [
      { title: "Privacy", path: "/privacy" },
      { title: "Terms", path: "/terms" },
    ],
  },
];
---

<footer class="relative mt-16 border-t border-gray-200 dark:border-gray-800 transition-colors duration-300 overflow-hidden">
  <div class="gradient-mesh animate-gradient"></div>
  <Container>
    <div class="grid grid-cols-1 gap-10 py-16 sm:grid-cols-2 md:grid-cols-4">
      <div class="">
        <div class="mb-4">
          <a href="/" class="inline-block hover-scale">
            <Image 
              src={logoImage} 
              alt="TouchGuides logo" 
              width={200} 
              class="mb-6"
            />
          </a>
        </div>
        <p class="text-sm text-gray-600 mb-4">
          Transform stays into stories worth sharing with a digital guidebook.
        </p>
        <div class="space-y-2">
          <a 
            href="mailto:hello@touchguides.com" 
            class="text-sm text-gray-600 hover:text-indigo-600 transition-colors flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            hello@touchguides.com
          </a>
          <a 
            href="https://touchguides.com" 
            class="text-sm text-gray-600 hover:text-indigo-600 transition-colors flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            touchguides.com
          </a>
        </div>
      </div>
      
      {footerLinks.map(category => (
        <div>
          <h3 class="text-lg font-semibold text-indigo-600 mb-4">{category.title}</h3>
          <ul class="mt-4 space-y-3">
            {category.items.map(item => (
              <li>
                <a 
                  href={item.path}
                  class="text-gray-600 hover:text-indigo-600 transition-colors duration-200 inline-block font-medium hover:translate-x-1 transform">
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </Container>
  <div class="py-6 border-t border-gray-200 dark:border-gray-800">
    <Container>
      <p class="text-center text-sm text-gray-600">
        Copyright Â© {new Date().getFullYear()} TouchGuides. All rights reserved.
      </p>
    </Container>
  </div>
</footer>

<style>
  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
      background-size: 100% 100%;
      opacity: 0.01;
      transform: scale(1);
    }
    25% {
      background-size: 150% 150%;
      opacity: 0.05;
      transform: scale(1.1);
    }
    50% {
      background-position: 100% 50%;
      background-size: 200% 200%;
      opacity: 0.75;
      transform: scale(1.2);
    }
    75% {
      background-size: 150% 150%;
      opacity: 0.15;
      transform: scale(1.1);
    }
    100% {
      background-position: 0% 50%;
      background-size: 100% 100%;
      opacity: 0.1;
      transform: scale(1);
    }
  }

  .animate-gradient {
    animation: gradient-shift 2s ease-in-out infinite;
  }

  .gradient-mesh {
    position: absolute;
    inset: -20%;
    background: linear-gradient(
      45deg,
      rgba(79, 70, 229, 0.4) 0%,
      rgba(124, 58, 237, 0.5) 25%,
      rgba(236, 72, 153, 0.4) 50%,
      rgba(99, 102, 241, 0.5) 75%,
      rgba(79, 70, 229, 0.4) 100%
    );
    opacity: 0.35;
    pointer-events: none;
    filter: blur(60px);
    transform: translateZ(0);
    will-change: background-position, background-size, opacity, transform;
    mix-blend-mode: color-dodge;
  }

  .gradient-mesh::before,
  .gradient-mesh::after {
    content: '';
    position: absolute;
    inset: -50%;
    background: linear-gradient(
      -45deg,
      rgba(124, 58, 237, 0.4) 0%,
      rgba(236, 72, 153, 0.5) 25%,
      rgba(99, 102, 241, 0.4) 50%,
      rgba(79, 70, 229, 0.5) 75%,
      rgba(124, 58, 237, 0.4) 100%
    );
    animation: gradient-shift 1.5s ease-in-out infinite reverse;
    filter: blur(40px);
    mix-blend-mode: screen;
  }

  .gradient-mesh::after {
    background: linear-gradient(
      90deg,
      rgba(236, 72, 153, 0.4) 0%,
      rgba(99, 102, 241, 0.5) 50%,
      rgba(236, 72, 153, 0.4) 100%
    );
    animation-duration: 3s;
    filter: blur(80px);
    mix-blend-mode: soft-light;
  }
</style>

---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "astro:assets";
import aboutImage from "../assets/about.jpg";
import { Icon } from "astro-icon";
// import headshotImage from "../assets/headshot-sax.jpg";

const values = [
  {
    title: "Innovation", 
    description: "We're constantly pushing boundaries to create exceptional experiences.",
    icon: "ph:lightbulb-fill",
  },
  // ... other values
];
---

<Layout title="About">
  <Container>
    <div class="max-w-screen-xl mx-auto px-5">
      <div class="mt-16 text-center">
        <h1 class="text-gradient-animation text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
          About
        </h1>
        <p class="text-lg mt-4 text-slate-600">
          We are a small but passionate team.
        </p>
      <div class="flex justify-center mt-8">
        <a href="/careers" class="button-gradient flex items-center gap-2 transform transition-all duration-200 hover:scale-105">
          <span>Join Our Team</span>
          <Icon name="ph:arrow-right" class="w-4 h-4" />
        </a>
      </div>
      </div>

      <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
        <h2 class="font-bold text-3xl text-gray-800">
          Empowering hosts <em>and</em> guests with TouchGuides.
        </h2>
        <p class="text-lg leading-relaxed text-slate-500">
          Transform stays into stories worth sharing with a digital guidebook. Spend less time answering guests!
        </p>
      </div>

      <div class="grid md:grid-cols-1 gap-10 mx-auto max-w-xs mt-12 pb-24">
        <div class="group">
          <div class="w-full aspect-square">
            <Image 
              src={aboutImage}
              alt="About"
              class="w-full rounded-md rounded transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
              width="400"
              height="400"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="mt-4 text-center">
            <h2 class="text-lg text-gray-800">Elon Zito</h2>
            <h3 class="text-sm text-slate-500">Founder</h3>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>

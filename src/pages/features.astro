---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "astro:assets";

const features = [
  {
    title: "AI Reservation Assistant",
    description: "Let our AI handle bookings and inquiries 24/7. Automatically manage your calendar, answer common questions, and convert more leads into bookings.",
    image: {
      src: "https://images.unsplash.com/photo-1526628953301-3e589a6a8b74?q=80&w=2000&auto=format&fit=crop",
      alt: "AI Reservation Assistant Interface"
    },
    benefits: [
      "24/7 automated booking management",
      "Natural language guest communication",
      "Seamless calendar integration"
    ]
  },
  {
    title: "Digital Guidebooks",
    description: "Create beautiful digital guides for your campground that help guests find everything they need. From trail maps to local attractions, make every stay memorable.",
    image: {
      src: "https://images.unsplash.com/photo-1496545672447-f699b503d270?q=80&w=2000&auto=format&fit=crop",
      alt: "Digital Trail Map and Guidebook"
    },
    benefits: [
      "Interactive campground maps",
      "Local attraction guides",
      "Real-time updates"
    ]
  },
  {
    title: "Management Dashboard",
    description: "One central hub to manage your entire operation. Track bookings, update guides, and analyze performance metrics all in one place.",
    image: {
      src: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=2000&auto=format&fit=crop",
      alt: "Campground Management Dashboard"
    },
    benefits: [
      "Unified booking management",
      "Analytics and reporting",
      "Guide content management"
    ]
  },
  {
    title: "Guest Experience",
    description: "Delight your guests with modern tools that make their stay easier and more enjoyable. From check-in instructions to local recommendations.",
    image: {
      src: "https://images.unsplash.com/photo-1523987355523-c7b5b0dd90a7?q=80&w=2000&auto=format&fit=crop",
      alt: "Happy Campers at Sunset"
    },
    benefits: [
      "Automated check-in/out",
      "Emergency information",
      "Local recommendations"
    ]
  }
];
---

<Layout title="Features">
  <div class="relative">
    <Container>
      <Sectionhead>
        <Fragment slot="title">Features</Fragment>
        <Fragment slot="desc">
          Modern tools for modern campgrounds
        </Fragment>
      </Sectionhead>

      <div class="mt-16 space-y-24">
        {
          features.slice(0, 2).map((feature, index) => (
            <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
              <div class="relative">
                <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-2 shadow-lg">
                  <img
                    src={feature.image.src}
                    alt={feature.image.alt}
                    class="w-full rounded-xl"
                    width="500"
                    height="500"
                  />
                </div>
              </div>
              <div class="relative">
                <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-8 shadow-lg">
                  <h3 class="text-3xl font-bold mb-4 text-blue-600">
                    {feature.title}
                  </h3>
                  <p class="text-lg text-slate-600 mb-8">{feature.description}</p>
                  <ul class="space-y-4">
                    {feature.benefits.map(benefit => (
                      <li class="flex items-center gap-3">
                        <span class="flex items-center justify-center w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-purple-500 shadow-lg">
                          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        </span>
                        <span class="text-slate-700">
                          {benefit}
                        </span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))
        }

        <div class="relative py-16">
          <Container>
            <div class="text-center max-w-3xl mx-auto mb-12">
              <h2 class="text-4xl font-bold mb-4 text-blue-600">
                Everything you need to succeed
              </h2>
              <p class="text-lg text-slate-600">
                Our comprehensive platform gives you all the tools needed to manage your campground, 
                delight guests, and grow your business.
              </p>
            </div>
          </Container>
        </div>

        {
          features.slice(2).map((feature, index) => (
            <div class={`grid md:grid-cols-2 gap-12 items-center ${(index + 2) % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
              <div class="relative">
                <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-2 shadow-lg">
                  <img
                    src={feature.image.src}
                    alt={feature.image.alt}
                    class="w-full rounded-xl"
                    width="500"
                    height="500"
                  />
                </div>
              </div>
              <div class="relative">
                <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-8 shadow-lg">
                  <h3 class="text-3xl font-bold mb-4 text-blue-600">
                    {feature.title}
                  </h3>
                  <p class="text-lg text-slate-600 mb-8">{feature.description}</p>
                  <ul class="space-y-4">
                    {feature.benefits.map(benefit => (
                      <li class="flex items-center gap-3">
                        <span class="flex items-center justify-center w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-purple-500 shadow-lg">
                          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        </span>
                        <span class="text-slate-700">
                          {benefit}
                        </span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </Container>
  </div>
</Layout> 
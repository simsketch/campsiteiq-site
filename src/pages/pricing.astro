---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import Contactform from "@components/contactform.astro";

const features = [
  "AI-powered 24/7 reservation management",
  "Digital guidebooks for guests",
  "Centralized dashboard",
  "Analytics and reporting",
  "Guest communication tools",
  "Custom branding options"
];
---

<Layout title="Pricing">
  <div class="relative overflow-hidden">
    <div class="gradient-mesh"></div>
    <Container>
      <Sectionhead>
        <Fragment slot="title">Transform Your Campground Operations</Fragment>
        <Fragment slot="desc">Join forward-thinking campground owners who are delighting guests and increasing revenue with our AI-powered platform.</Fragment>
      </Sectionhead>

      <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
        <div class="relative group">
          <div class="glass-card p-8 transition-all duration-300 hover:shadow-xl bg-white/90 backdrop-blur-lg rounded-2xl">
            <h2 class="text-2xl font-bold text-blue-600 mb-4">Enterprise Features</h2>
            <ul class="space-y-4 mb-8">
              {features.map((feature) => (
                <li class="flex items-center gap-3">
                  <div class="flex items-center justify-center w-6 h-6 rounded-full bg-gradient-to-br from-blue-500 to-purple-500 shrink-0">
                    <Icon class="w-4 h-4 text-white" name="ph:check-bold" />
                  </div>
                  <span class="text-slate-700">{feature}</span>
                </li>
              ))}
            </ul>
            <p class="text-slate-600 italic">
              Custom pricing based on your campground's size and needs.
            </p>
          </div>
        </div>

        <div class="relative group">
          <div class="glass-card p-8 transition-all duration-300 hover:shadow-xl bg-white/90 backdrop-blur-lg rounded-2xl">
            <h2 class="text-2xl font-bold text-blue-600 mb-4">Contact Us</h2>
            <p class="text-slate-600 mb-6">
              Fill out the form below and we'll get back to you with pricing information tailored to your needs.
            </p>
            <Contactform 
              formId="pricing-inquiry"
              subject="Pricing Inquiry"
            />
          </div>
        </div>
      </div>
    </Container>
  </div>
</Layout>

<style>
  .gradient-mesh {
    position: absolute;
    inset: -20%;
    background: linear-gradient(
      45deg,
      rgba(59, 130, 246, 0.1) 0%,
      rgba(99, 102, 241, 0.15) 25%,
      rgba(236, 72, 153, 0.1) 50%,
      rgba(139, 92, 246, 0.15) 75%,
      rgba(59, 130, 246, 0.1) 100%
    );
    opacity: 0.15;
    pointer-events: none;
    filter: blur(100px);
    transform: translateZ(0);
    mix-blend-mode: soft-light;
  }

  .glass-card {
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }
</style> 